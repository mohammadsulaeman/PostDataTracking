@model DTO.MetaDTO
<div class="card-body">
    <div class="form-group">
        <label>Meta Content</label>
        @Html.TextBoxFor(x => x.MetaContent, new { @class = "form-control", @placeholder = "Meta Content" })
    </div>
    <div class="form-group">
        <label>Name</label>
        @Html.DropDownList("Name", new SelectList(new[] { "Keywords", "Descriptions", "Author", "Twittercard" }), new { @class = "form-control select2" })
    </div>
    <input type="number" name="MetaID" value="@Model.MetaID" hidden />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
